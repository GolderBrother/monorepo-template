{
  "private": false,
  "version": "0.0.1",
  "name": "monorepo-template",
  "description": "A monorepo template project by pnpm and turbo",
  "scripts": {
    "lint": "eslint --ext .ts ./packages --fix",
    "test": "cd packages/package1 && pnpm i && npm run test && cd ../..",
    "lint-staged": "npm run test && lint-staged -c .lintstagedrc.js",
    "preinstall": "only-allow pnpm",
    "prepare": "husky install",
    "prepublishOnly": "npm run test",
    "commit": "pnpm changeset && pnpm run version-packages && cz",
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "changeset": "changeset add",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish && npm publish",
    "docs:dev": "vitepress dev",
    "docs:build": "vitepress build",
    "docs:preview": "vitepress preview",
    "docs:api": "typedoc packages/package1/src/index.ts --out tsdoc"
  },
  "author": {
    "name": "GolderBrother",
    "email": "1204788939@qq.com"
  },
  "license": "MIT",
  "packageManager": "pnpm@9.1.3",
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  },
  "devDependencies": {
    "@changesets/cli": "^2.25.2",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@types/node": "^18.11.6",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "commitizen": "^4.2.5",
    "cz-git": "^1.3.12",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "only-allow": "^1.1.1",
    "prettier": "^2.7.1",
    "turbo": "^1.13.4",
    "typedoc": "^0.25.12",
    "typescript": "^4.8.4",
    "vitepress": "^1.0.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-git"
    }
  }
}
